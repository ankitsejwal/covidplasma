<div class="form-group">
  <input
    class="form-control form-control-lg"
    placeholder="Enter name"
    name="name"
    type="text"
    value="<%- user.name %>"
  />
</div>
<div class="form-group">
  <input
    class="form-control form-control-lg"
    placeholder="Enter age"
    name="age"
    type="number"
    value="<%- user.age %>"
    min="16"
    max="99"
  />
</div>
<div class="form-group">
  <select class="form-control form-control-lg" name="gender">
    <option disabled selected>Select Gender</option>
    <option value="male">Male</option>
    <option value="female">Female</option>
  </select>
</div>
<div class="form-group">
  <select class="form-control form-control-lg" name="bloodGroup">
    <option disabled selected>Select Blood Group</option>
    <option value="a+">A+</option>
    <option value="a-">A-</option>
    <option value="b+">B+</option>
    <option value="b-">B-</option>
    <option value="ab+">AB+</option>
    <option value="ab-">AB-</option>
    <option value="o+">O+</option>
    <option value="o-">O-</option>
    <option value="notsure">not sure</option>
  </select>
  <small class="form-text text-muted"
    >Select &nbsp; not sure &nbsp; if you don't know your blood group</small
  >
</div>
<div class="form-group">
  <input
    class="form-control form-control-lg"
    placeholder="Enter phone"
    name="phone"
    type="text"
    value="<%- user.phone %>"
  />
</div>
<div class="form-group">
  <input
    class="form-control form-control-lg"
    placeholder="Enter email"
    name="email"
    type="email"
    value="<%- user.email %>"
  />
</div>

<div class="form-group">
  <input
    class="form-control form-control-lg"
    id="password"
    name="password"
    placeholder="Enter password"
    type="password"
  />
</div>
<div class="form-group">
  <input
    class="form-control form-control-lg"
    id="repeat_password"
    name="repeat_password"
    placeholder="Re-enter password"
    type="password"
  />
  <small class="form-text text-muted"
    >You can use email and password to edit your details later</small
  >
</div>
<div class="form-group" id="locationField">
  <input
    class="form-control form-control-lg"
    style="width: 100%"
    id="autocomplete"
    placeholder="Enter a city near you"
    onFocus="geolocate()"
    type="text"
  />
  <small class="form-text text-muted"
    >Enter your city or the biggest city near you with hospitals</small
  >
</div>
<div id="address">
  <div class="form-group">
    <input
      class="form-control form-control-lg"
      id="locality"
      name="locality"
      placeholder="City"
      type="hidden"
      value="<%- user.address.locality %>"
    />
  </div>
  <div class="form-group">
    <input
      class="form-control form-control-lg"
      placeholder="State"
      id="administrative_area_level_1"
      name="state"
      type="hidden"
      value="<%- user.address.state %>"
    />
  </div>
  <div class="form-group">
    <input
      class="form-control form-control-lg"
      id="country"
      placeholder="Country"
      name="country"
      type="hidden"
      value="<%- user.address.country %>"
    />
  </div>
</div>
<button class="btn btn-lg btn-block btn-primary" type="submit">Submit</button>
<script src="js/googleAddressAutocomple.js"></script>
